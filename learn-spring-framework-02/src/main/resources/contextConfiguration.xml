<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

    <bean id="name" class="java.lang.String">
        <constructor-arg value="Vishal"/>
    </bean>

    <bean id="age" class="java.lang.Integer">
        <constructor-arg value="28"/>
    </bean>
    
    <context:component-scan base-package="in.pelligent.learnspringframework.game"/>

    <bean id="game" class="in.pelligent.learnspringframework.game.PacmanGame"/>
    <bean id="gameRunner" class="in.pelligent.learnspringframework.game.GameRunner">
        <constructor-arg ref="game"/>
    </bean>
</beans>